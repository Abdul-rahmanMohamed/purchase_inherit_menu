<?xml version="1.0" ?>
<odoo>
    <data noupdate="1">
        <record id="report_template_mail" model="mail.template">
            <field name="name">purchase_mail</field>
            <field name="model_id" ref="purchase_menu.model_purchase_request"/>
            <field name="email_from">${(object.req_by.email_formatted |safe}</field>
            <field name="email_to">${object.email_id.id}</field>
            <field name="subject">PURCHASE REQUEST (Ref ${object.req_name})</field>
            <field name="body_html" type="html">
                <div style="margin: 0px; padding: 0px;">
                    <p style="margin: 0px; padding: 0px; font-size: 13px;">
                        Dear ${object.req_by}
                        <br/>
                        <br/>
                        Purchase Request ${object.req_name}
                        <br/>
                        <br/>
                        have been approved
                    </p>
                </div>
            </field>
<!--            <field name="report_template" ref="id_report_template_email"/>-->
<!--            <field name="report_name"/>-->
<!--            ${object.req_name}-->
<!--            <field/>-->
        </record>
    </data>
</odoo>
